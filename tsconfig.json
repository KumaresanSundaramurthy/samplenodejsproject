{
  "compilerOptions": {
    "module": "commonjs", // or "ES6" if using ES modules
    "target": "ES6",
    "baseUrl": "./src", // Adjust if needed
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // Adjust if needed
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}